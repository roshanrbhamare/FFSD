<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= title %>
    </title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/scripts.js"></script>
</head>

<body>
    <% if (!(title==="login" ||title==="signup" || role==="seller"||role==="admin" )) { %>
        <div>
            <header class="bg-white shadow-sm">
                <div class="container mx-auto px-4 py-4">
                    <!-- Top Bar -->
                    <div class="flex items-center justify-between mb-4">
                        <!-- Logo -->
                        <div class="flex items-center">

                            <span class="ml-2 text-2xl font-bold text-green-600">SwiftMart</span>
                        </div>

                        <!-- Search Bar -->
                        <div class="hidden sm:block flex-1 max-w-2xl mx-8">
                            <div class="relative">
                                <input type="text" placeholder="Search for products"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
                                <button class="absolute right-3 top-2">
                                    <i class="fas fa-search text-gray-400"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Right Icons -->
                        <div class="flex items-center space-x-6">

                            <div class="flex items-center space-x-4">

                                <a href="/account"><button class="relative">
                                        <i class="far fa-user text-xl"></i>
                                    </button></a>
                                <a href="/api/v1/user/cart">
                                    <button class="relative">
                                        <i class="fas fa-shopping-cart text-xl"></i>
                                        <span
                                            class="absolute -top-2 -right-2 bg-green-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">3</span>
                                    </button>
                                </a>
                                <form action="/api/v1/user/logout" method="get">
                                    <button type="submit"
                                        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <nav class="flex items-center space-x-6">
                        <button class="hidden md:block bg-green-500 text-white px-4 py-2 rounded-lg flex items-center">
                            <i class="fas fa-bars mr-2"></i>
                            All Departments
                        </button>
                        <a href="/api/v1/user/" class="text-gray-700 hover:text-green-500">Home</a>
                        <a href="/api/v1/user/shop" class="text-gray-700 hover:text-green-500">Shop</a>
                        <a href="/blog" class="text-gray-700 hover:text-green-500">Blog</a>
                        <a href="/contact" class="text-gray-700 hover:text-green-500">About us</a>
                        <a href="/api/v1/user/login" class="text-gray-700 hover:text-green-500">Login</a>

                    </nav>
                </div>
            </header>

        </div>
        <% }else if(role==="seller" ) { %>


            <div>
                <header class="bg-white shadow-sm">
                    <div class="container mx-auto px-4 py-4">
                        <!-- Top Bar -->
                        <div class="flex items-center justify-between mb-4">
                            <!-- Logo -->
                            <div class="flex items-center">
                                <a href="/api/v1/user">
                                    <span class="ml-2 text-2xl font-bold text-green-600">SwiftMart</span>
                                </a>
                            </div>

                            <!-- Right Icons -->
                            <div class="flex items-center space-x-6">
                                <a href="/account" class="text-gray-700 hover:text-green-500">Profile</a>

                                <!-- Logout -->
                                <form action="/api/v1/user/logout" method="get">
                                    <button type="submit"
                                        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">Logout</button>
                                </form>
                            </div>
                        </div>

                        <!-- Navigation -->
                        <nav class="flex items-center space-x-6">
                            <a href="/api/v1/product/create" class="text-gray-700 hover:text-green-500">Create
                                Product</a>
                            <a href="/api/v1/product" class="text-gray-700 hover:text-green-500">Listed
                                Products</a>
                        </nav>
                    </div>
                </header>
            </div>
            <% }else{ %>

            <% } %>
                <main>
                    <div>


                        <main>
                            <div>
                                <% if (typeof success !=='undefined' && success.length) { %>
                                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-1/2 mx-auto"
                                        role="alert">
                                        <%= success %>
                                            <button type="button" class="absolute top-0 right-0 px-4 py-3"
                                                onclick="this.parentElement.remove()"
                                                aria-label="Close">&times;</button>
                                    </div>
                                    <% } %>

                                        <% if (typeof error !=='undefined' && error.length) { %>
                                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative w-1/2 mx-auto"
                                                role="alert">
                                                <%= error %>
                                                    <button type="button" class="absolute top-0 right-0 px-4 py-3"
                                                        onclick="this.parentElement.remove()"
                                                        aria-label="Close">&times;</button>
                                            </div>
                                            <% } %>
                            </div>
                        </main>

                        <%- body %>
                    </div>
                </main>


</body>

</html>