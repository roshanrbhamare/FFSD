<body class="bg-gray-100">

    <div class=" mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <!-- Breadcrumb -->
        <nav class="text-sm text-gray-500 mb-4">
            <a href="/" class="hover:underline">Home</a> / <a href="/" class="hover:underline">Shop</a> / <a class="cursor-pointer"
                class="text-gray-700"><%=product.title%></a>
        </nav>

        <!-- Product Display -->
      

        <div class="w-full mx-auto bg-white  md:flex">
            <!-- Product Image Section -->
            <div class="md:w-1/2 h-1/3 overflow-hidden">
                <img id="mainImage" src=<%=product.image%> alt=<%=product.title%> class="w-[50%] h-full mx-auto  rounded-lg">
                <div class="flex space-x-4 mt-4">
                    <img src=<%=product.image%> class="thumbnail w-20 h-20 cursor-pointer rounded-lg" onclick="changeImage(this.src)">
                    <img src=<%=product.image%> class="thumbnail w-20 h-20 cursor-pointer rounded-lg" onclick="changeImage(this.src)">
                    <img src=<%=product.image%>class="thumbnail w-20 h-20 cursor-pointer rounded-lg" onclick="changeImage(this.src)">
                </div>
            </div>
    
            <!-- Product Details Section -->
            <div class="md:w-1/2 mt-8 md:mt-0 md:ml-12">
                <h1 class="text-3xl font-bold mb-2"><%=product.title%></h1>
                <span class="text-sm text-gray-500"><%=product.category%></span>
    
                <div class="flex items-center mt-4">
                    <div class="text-yellow-400">
                        &#9733;&#9733;&#9733;&#9733;
                        <span class="text-gray-300">&#9733;</span>
                    </div>
                    
                </div>
    
                <div class="mt-4">
                    <span class="text-2xl font-semibold text-red-500">Rs <%=product.price%></span>
                    <span class="text-gray-400 line-through ml-2">Rs. 345</span>
                </div>
    
             
                <!-- Quantity Selector -->
               
                <button onclick="AddToCart(`<%= product.id %>`)" class="mt-8 bg-green-600 text-white text-lg px-6 py-3 rounded-lg hover:bg-green-700">Add to Cart</button>
    
                <!-- Additional Info -->
                <div class="mt-8 text-gray-700">
                    <p><strong>Product Code:</strong> CHO12345</p>
                    <p><strong>Availability:</strong> In Stock</p>
                    <p><strong>Type:</strong> Confectionery</p>
                    <p><strong>Shipping:</strong> Free Shipping on orders over $50</p>
                </div>
            </div>
        </div>





        <!-- Product Details -->
        <div class="mt-10">
            <h3 class="text-xl font-bold"><%=product.category%></h3>
            <p class="text-gray-600 mt-2">
                <%=product.description%>
            </p>

            <h3 class="text-xl font-bold mt-6">Storage Tips</h3>
            <p class="text-gray-600 mt-2">
                Store in a cool, dry place.
            </p>
        </div>

        <!-- Related Products -->
        <h3 class="text-2xl font-bold mt-10">Related Items</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-4">
            <% for (let i=0; i < filteredProducts.length; i++) { %>
            <div class="bg-white shadow-lg rounded-lg p-4">
                <img  src=<%=
                filteredProducts[i].image
                %>
                    class="w-48 h-48 rounded-lg">
                <h4 class="text-sm font-bold mt-2"><%=
                    filteredProducts[i].title
                    %></h4>
                <p class="text-green-600 font-semibold"> Rs.<%=
                    filteredProducts[i].price
                    %></p>
                <button class="mt-2 w-full py-2 bg-green-600 text-white rounded-lg text-sm">Add</button>
            </div>
            <% } %>
        </div>
    </div>
    <script>
        function AddToCart(productId){
            console.log(productId)
            fetch(`http://localhost:3000/api/v1/user/cart/add/${productId}`,{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    
                },credentials:"include"
            })
        }

        function removeFromCart(productId){
            console.log(productId)
            fetch(`http://localhost:3000/api/v1/user/cart/remove/${productId}`,{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    
                },credentials:"include"
            })
        }

     



    </script>
</body>